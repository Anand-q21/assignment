FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY nx.json ./
COPY tsconfig.base.json ./

# Install dependencies
RUN npm ci

# Copy source code
COPY . .

# Build frontend
RUN npx nx build frontend

# Expose port
EXPOSE 4200

# Start frontend
CMD ["npx", "nx", "serve", "frontend", "--host", "0.0.0.0"]